package kr.ac.kopo.framework;

import java.lang.reflect.Method;

public class CtrlAndMethod {
	
	//boardList 가 들어오면 특정 메소드를 실행하겠다는 의미임. 
	//boardController 객체가 있어야 특정 메소드를 실행할 수가 있음. new 를 해야 메소드를 실행할 수가 있음.
	
	private Object target;
	//어느 컨트롤러의 무슨 메소드를 실행할까? ~!
	
	private Method method;
	// /board/list.do 가 들어오면은 new BoardController()의 . list() 메소드를 실행해야 한다는 의미임
														//위에 것이 target 이 되어야함 				
	//login.do 가 들어오면은 new LoginController()의 login() 메소드가 실행이 되어야 해! 
	public CtrlAndMethod(Object target, Method method) {
		super();
		this.target = target;
		this.method = method;
	}
	public Object getTarget() {
		return target;
	}

	public Method getMethod() {
		return method;
	}
	
	
	
	
	

}
